<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_room_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OneRoomFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:id="@+id/room_1_txt_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROOM 1"
            android:gravity="center_horizontal"
            android:padding="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:layout_below="@id/room_1_txt_view">
            <ImageView
                android:id="@+id/person_in_circle_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile"
                android:scaleType="center"
                android:background="@drawable/circle_with_grey_stroke"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adults"
                    android:textSize="15sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(5+ years)"
                    android:textSize="12sp"
                    android:textColor="#d3d3d3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/three_room_buttons_background"
                android:padding="1dp">
                <Button
                    android:id="@+id/room1_button"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="15sp"
                    android:textColor="#FFF"
                    android:background="@drawable/room1_background"
                    android:backgroundTint="#ff0000"
                    android:clickable="true"/>
                <Button
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#d3d3d3"/>
                <Button
                    android:id="@+id/room2_button"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="15sp"
                    android:textColor="#d3d3d3"
                    android:background="@drawable/room2_background"
                    android:clickable="true"/>
                <Button
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#d3d3d3"/>
                <Button
                    android:id="@+id/room3_button"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="15sp"
                    android:textColor="#d3d3d3"
                    android:background="@drawable/room3_background"
                    android:clickable="true"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
