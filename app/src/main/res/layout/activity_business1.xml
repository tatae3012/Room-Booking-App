<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aryan.android.oyo.BusinessActivity"
    android:background="@drawable/background_color_2">
    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7" >
        <ImageView
            android:id="@+id/expandedImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/oyo1"
            android:scaleType="fitXY"
            app:layout_scrollFlags="scroll"/>

        <TextView
            android:id="@+id/first_activity_oyo_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:paddingTop="30sp"
            android:text="MTV Rooms"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/add"
        android:layout_width="149dp"
        android:layout_height="66dp"
        android:layout_below="@+id/lay"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="62dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shaape"
        android:text="Add Room"
        android:textColor="@color/half_white" />
    <Button
        android:id="@+id/delete"
        android:layout_width="149dp"
        android:layout_height="66dp"
        android:layout_below="@+id/lay"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="202dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shaape"
        android:text="Delete Room"
        android:textColor="@color/half_white" />

    <Button
        android:id="@+id/logout2"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#401644"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        android:textColor="@color/half_white" />
</RelativeLayout>