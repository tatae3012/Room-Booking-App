            android:textSize="10sp"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/left_side_curved_background"
            android:layout_below="@id/hotel_location"
            />
        <TextView
            android:id="@+id/hotel_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Very Good"
            android:textColor="#ade13d"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/right_side_curved_background"
            android:layout_below="@id/hotel_location"
            android:layout_toRightOf="@id/hotel_rating"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_count"
            android:text="228"
            android:textColor="#000"
            android:textSize="7sp"
            android:layout_below="@id/hotel_location"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="4sp"
            android:layout_toRightOf="@id/hotel_description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratings_txt"
            android:text="Ratings >"
            android:textColor="#000"
            android:textSize="7sp"
            android:layout_below="@id/hotel_location"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="4sp"
            android:layout_toRightOf="@id/rating_count"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>